####################################
# Core service URLs & credentials
####################################

# PostgreSQL (used by common/db/session.py)
DATABASE_URL=postgresql+asyncpg://user:pass@postgres:5432/app

# Redis cache
REDIS_URL=redis://redis:6379/0

# Kafka bootstrap broker(s)
KAFKA_BOOTSTRAP=kafka:9092

####################################
# API Gateway / Auth
####################################

# JWKS endpoint for Keycloak realm “money-transfer”
JWKS_URL=http://keycloak:8080/realms/money-transfer/protocol/openid-connect/certs

####################################
# Optional Observability
####################################

# If you have an OpenTelemetry collector:
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
SERVICE_NAME=money-transfer-stack

####################################
# Load-balancer backend lists
####################################

USER_BACKENDS=user_service:50051
TX_BACKENDS=transaction_service:50052
